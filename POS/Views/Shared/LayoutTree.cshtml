<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Cards</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Add your custom CSS styles here -->
    <style>
        .card {
            margin: 10px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 20px;
        }

        .btn-primary {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <form class="row" id="cardContainer" style="width: 6000%;margin-top: 30%;">
        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.8/dist/umd/popper.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        // Sample data (replace with your actual data)
        var dashboardData = [
            { title: 'Builds', description: 'View and manage builds.' },
            { title: 'Builds', description: 'View and manage builds.' },
            { title: 'Builds', description: 'View and manage builds.' }
            // Add more data as needed
        ];
        function createCard(data) {
            var cardHtml = `
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">${data.title}</h5>
                                <p class="card-text">${data.description}</p>
                                <a href="#" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                `;
            return cardHtml;
        }

        $(document).ready(function () {
            var cardContainer = $('#cardContainer');

            for (var i = 0; i < dashboardData.length; i++) {
                var cardData = dashboardData[i];
                var cardHtml = createCard(cardData);
                cardContainer.append(cardHtml);
            }
        });
    </script>

</body>
</html>
